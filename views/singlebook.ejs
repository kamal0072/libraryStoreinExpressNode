<%- include('./partials/Header.ejs') %>
    <div class="row mx-3">
        <div class="col-6">
            <table class="table table-hovered table-bordered my-5 bg-primary">
                <tr>
                    <td>Book Title</td>
                    <td><%- book.title %></td>
                </tr>
                <tr>
                    <td>Book Author Name</td>
                    <td><%- book.author %></td>
                </tr>
                <tr>
                    <td>Book Price</td>
                    <td><%- book.price %></td>
                </tr>
                <tr>
                    <td>Book Description</td>
                    <td><%- book.description %></td>
                </tr>
            </table>
        </div>
        <div class="col-6 mt-5">
            <% if (book.image) { %>
                <div class="card" style="width: 18rem;">
                    <img src="/uploads/<%= book.image %>" class="card-img-top" alt="<%= book.title %>" >
                    <div class="card-body text-center">
                        <h5 class="card-title"> <%= book.title.slice(0, 1).toUpperCase() + book.title.slice(1) %> </h5>
                        <p class="card-text"><%= book.description.slice(0, 1).toUpperCase() + book.description.slice(1) %></p>
                        <a href="/" class="btn btn-primary btn-block">Back</a>
                    </div>
                </div>
            <% } else { %>
                <div class="card mt-5">
                    <div class="card-body mt-5">
                        <img src="https://via.placeholder.com/150" alt="Na">
                        <div class="card-body text-center">
                            <h5 class="card-title text-center">No Image Available</h5>
                            <p class="card-title">No image</p>
                            <a href="/" class="btn btn-primary">Back</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <%- include('./partials/Footer.ejs') %>