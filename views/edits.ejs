<%- include("./partials/Header.ejs") %>
    <div class="container-fluid mt-3 ">
        <div class="row offset-2 mt-4">
            <div class="col-sm-8 border border-2 border-light  px-5 py-3 shadow-lg rounded-4  ">
                <h2 class="alert alert-success text-center text-danger  ">Update</h2>
                <form action="" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-6">
                            <label for="title" class="form-label">Book title</label>
                            <input type="text" class="form-control" id="title" name="title" value="<%= book.title %>" />
                        </div>
                        <div class="col-6">
                            <label for="author" class="form-label">Book Author Name</label>
                            <input type="text" class="form-control" id="author" name="author" value="<%= book.author %>" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Book price (INR)</label>
                        <input type="text" class="form-control" id="price" name="price" value="<%= book.price %>" />
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Book description</label>
                        <input type="text" class="form-control" id="description" name="description" value="<%= book.description %>" />
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Book Image</label>
                        <input type="file" class="form-control" id="image" name="image" value="<%= book.image %>" />
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                    <a href="/" class="btn btn-danger">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <%- include("./partials/Footer.ejs") %>